<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_my_home_menu_motorcycle_registry" name="Portal layout : motorcycle registry menu entries" inherit_id="portal.portal_breadcrumbs" priority="20">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'motorcycle_registry' or motorcycle_registry" t-attf-class="breadcrumb-item #{'active ' if not motorcycle_registry else ''}">
                <a t-if="motorcycle_registry" t-attf-href="/my/registry?{{ keep_query() }}">Motorcycle Registry</a>
                <t t-else="">Motorcycle Registry</t>
            </li>
        </xpath>
    </template>

    <template id="portal_my_home_motorcycle_registry" name="Show Motorcycle Registry Details" customize_show="True" inherit_id="portal.portal_my_home" priority="20">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Motorcycle Registry</t>
                <t t-set="url" t-value="'/my/registry'"/>
                <t t-set="placeholder_count" t-value="'motorcycle_registry_count'"/>
            </t>
        </xpath>
    </template>

    <template id="portal_my_motorcycle" name="My Motorcycle" inherit_id="portal.portal_sidebar" primary="True">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <t t-set="o_portal_fullwidth_alert" groups="registry.group_registry_admin">
                <t t-call="portal.portal_back_in_edit_mode">
                    <t t-set="backend_url" t-value="'/web#id=%s&amp;action=%s&amp;view_type=form' % (motorcycle_registry.id, request.env.ref('motorcycle_registry.registry_list_action').id)"/>
                </t>
            </t>

            <div class="row mt16 o_project_portal_sidebar">
                <div id="registry_content" class="col-lg-9 justify-content-end">
                    <div id="card" class="card">
                        <div id="card_header" class="card-header bg-white" data-anchor="true">
                            <div class="row g-0">
                                <div class="col-12">
                                    <h5 class="d-flex mb-1 mb-md-0 row">
                                        <div class="col-9">
                                            <span t-field="registry.registry_number" class="text-truncate"/>
                                        </div>
                                    </h5>
                                </div>
                            </div>
                        </div>
                        <div id="card_body" class="card-body">
                            <div class="row mb-4 container">
                                <div class="col-12 col-md-6">
                                    <div><strong>VIN: </strong><span t-field="registry.vin"/></div>
                                    <div><strong>Brand: </strong><span t-field="registry.brand"/></div>
                                    <div><strong>Make: </strong><span t-field="registry.make"/></div>
                                    <div><strong>Model: </strong><span t-field="registry.model"/></div>
                                    <div><strong>Current Mileage: </strong><span t-field="registry.current_mileage"/></div>
                                    <div><strong>License Plate: </strong><span t-field="registry.license_plate"/></div>
                                    <div><strong>Certificate Title: </strong><span t-field="registry.certificate_title"/></div>
                                    <div><strong>Registry Date: </strong><span t-field="registry.registry_date"/></div>
                                    <div><strong>Owner ID: </strong><span t-field="registry.owner_id"/></div>
                                    <div><strong>Owner Phone: </strong><span t-field="registry.owner_phone"/></div>
                                    <div><strong>Owner Email: </strong><span t-field="registry.owner_email"/></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>