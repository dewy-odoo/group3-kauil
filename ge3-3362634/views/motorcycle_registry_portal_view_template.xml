<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_my_home_menu_motorcycle_registry" name="Portal layout : motorcycle registry menu entries" inherit_id="portal.portal_breadcrumbs" priority="20">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'motorcycle_registry' or motorcycle_registry" t-attf-class="breadcrumb-item #{'active ' if not motorcycle_registry else ''}">
                <a t-if="motorcycle_registry" t-attf-href="/my/registry?{{ keep_query() }}">Motorcycle Registry</a>
                <t t-else="">Motorcycle Registry</t>
            </li>
        </xpath>
    </template>

    <template id="portal_my_home_motorcycle_registry" name="Show Motorcycle Registry Details" customize_show="True" inherit_id="portal.portal_my_home" priority="20">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Motorcycle Registry</t>
                <t t-set="url" t-value="'/my/registry'"/>
                <t t-set="placeholder_count" t-value="'motorcycle_registry_count'"/>
            </t>
        </xpath>
    </template>

    <template id="portal_my_motorcycle" name="My Motorcycle" inherit_id="portal.portal_sidebar" primary="True">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <t t-set="o_portal_fullwidth_alert" groups="registry.group_registry_admin">
                <t t-call="portal.portal_back_in_edit_mode">
                    <t t-set="backend_url" t-value="'/web#id=%s&amp;action=%s&amp;view_type=form' % (motorcycle_registry.id, request.env.ref('motorcycle_registry.registry_list_action').id)"/>
                </t>
            </t>

            <div class="row mt16 o_project_portal_sidebar">
                <div id="registry_content" class="col-lg-9 justify-content-end">
                    <div id="card" class="card">
                        <div id="card_header" class="card-header bg-white" data-anchor="true">
                            <div class="row g-0">
                                <div class="col-12">
                                    <h3 class="d-flex mb-1 mb-md-0 row">
                                            <span t-field="registry.registry_number" class="text-truncate"/>
                                    </h3>
                                </div>
                            </div>
                        </div>
                        <div id="card_body" class="card-body">
                            <section class="s_website_form pt16 pb16" data-snippet="s_website_form" data-name="Form">
                                <div class="container">
                                    <form action="form/" method="post" enctype="multipart/form-data" class="o_mark_required" data-mark="*" data-pre-fill="true"
                                    contenteditable="false" data-model_name="motorcycle_registry" data-success-mode="message">
                                        <div class="s_website_form_end_message d-none">
                                            <div class="oe_structure">
                                                <section class="s_text_block pt64 pb64" data-snippet="s_text_block">
                                                    <div class="container">
                                                            <h2 class="text-center">This is a success!</h2>
                                                    </div>
                                                </section>
                                            </div>
                                        </div>
                                        <div class="s_website_form_rows row s_col_no_bgcolor">
                                            <input type="hidden" class="form-control s_website_form_input" name="id" required="1" t-att-value="registry.id" id="olt6zpqe8mlj"/>
                                            <div class="s_website_form_field mb-3 col-12 s_website_form_custom s_website_form_required " data-type="char" data-name="Field">
                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                                    <label class="col-form-label col-sm-auto s_website_form_label " style="width: 200px" for="olt6zpqe8mlj">
                                                        <span class="s_website_form_label_content">VIN</span>
                                                        <span class="s_website_form_mark"> *</span>
                                                    </label>
                                                    <div class="col-sm">    
                                                    <input type="text" class="form-control s_website_form_input" name="vin" required="1" t-att-value="registry.vin" id="olt6zpqe8mlj"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="s_website_form_field mb-3 col-12 s_website_form_custom " data-type="char" data-name="Field">
                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                                    <label class="col-form-label col-sm-auto s_website_form_label " style="width: 200px" for="olt6zpqe8mlj">
                                                        <span class="s_website_form_label_content">Brand</span>
                                                    </label>
                                                    <div class="col-sm">    
                                                    <input type="text" class="form-control s_website_form_input" name="brand" t-att-value="registry.brand" id="olt6zpqe8mlj"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="s_website_form_field mb-3 col-12 s_website_form_custom " data-type="char" data-name="Field">
                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                                    <label class="col-form-label col-sm-auto s_website_form_label " style="width: 200px" for="olt6zpqe8mlj">
                                                        <span class="s_website_form_label_content">Make</span>
                                                    </label>
                                                    <div class="col-sm">    
                                                    <input type="text" class="form-control s_website_form_input" name="make" t-att-value="registry.make" id="olt6zpqe8mlj"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="s_website_form_field mb-3 col-12 s_website_form_custom " data-type="char" data-name="Field">
                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                                    <label class="col-form-label col-sm-auto s_website_form_label " style="width: 200px" for="olt6zpqe8mlj">
                                                        <span class="s_website_form_label_content">Model</span>
                                                    </label>
                                                    <div class="col-sm">    
                                                    <input type="text" class="form-control s_website_form_input" name="model" t-att-value="registry.model" id="olt6zpqe8mlj"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="s_website_form_field mb-3 col-12 s_website_form_custom " data-type="char" data-name="Field">
                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                                    <label class="col-form-label col-sm-auto s_website_form_label " style="width: 200px" for="olt6zpqe8mlj">
                                                        <span class="s_website_form_label_content">Current Mileage</span>
                                                    </label>
                                                    <div class="col-sm">    
                                                    <input type="text" class="form-control s_website_form_input" name="current_mileage" t-att-value="registry.current_mileage" id="olt6zpqe8mlj"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="s_website_form_field mb-3 col-12 s_website_form_custom " data-type="char" data-name="Field">
                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                                    <label class="col-form-label col-sm-auto s_website_form_label " style="width: 200px" for="olt6zpqe8mlj">
                                                        <span class="s_website_form_label_content">License Plate</span>
                                                    </label>
                                                    <div class="col-sm">    
                                                    <input type="text" class="form-control s_website_form_input" name="license_plate" t-att-value="registry.license_plate" id="olt6zpqe8mlj"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="s_website_form_field mb-3 col-12 s_website_form_custom " data-type="char" data-name="Field">
                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                                    <label class="col-form-label col-sm-auto s_website_form_label " style="width: 200px" for="olt6zpqe8mlj">
                                                        <span class="s_website_form_label_content">Registry Date</span>
                                                    </label>
                                                    <div class="col-sm">    
                                                    <input type="text" class="form-control s_website_form_input" name="registry_date" t-att-value="registry.registry_date" id="olt6zpqe8mlj"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="mb-0 py-2 col-12 s_website_form_submit" data-name="Submit Button">
                                                <div style="width: 200px;" class="s_website_form_label"></div>
                                                <a href="#" role="button" class="btn btn-primary btn-lg s_website_form_send o_default_snippet_text" contenteditable="true">Save</a>
                                                <span id="s_website_form_result"></span>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </section>
